<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="unah.proyecto.aeo.aplicacionagendaelectronicaoriental.clasesJAVAVirgilio.Login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="@dimen/app_top"

        >

            <ImageView
                android:id="@+id/imagelogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/login_imagen"
                android:layout_marginTop="20dp"
            />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


            >
                <EditText
                    android:id="@+id/usuario_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:hint="Usuario"
                    android:layout_marginTop="20dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_ñÑ"
                    android:textSize="15sp"


                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleTint="@color/colorAccent"
                app:passwordToggleEnabled="true"
            >

                <EditText
                    android:id="@+id/contrasena_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:layout_marginTop="20sp"
                    android:hint="Contraseña"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#234"
                    android:background="#303f9f"
                    android:padding="3dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    app.card="5dp"

                >


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:textStyle="bold"
                            android:id="@+id/ingresar_login"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:layout_weight="1"
                            android:text="Ingresar"
                            android:onClick="Ingresar_Login"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </FrameLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#234"
                    android:background="#303f9f"
                    android:padding="3dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    app.card="5dp"

                >


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:textStyle="bold"
                            android:id="@+id/registrarse_login"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:layout_weight="1"
                            android:text="Registrarse"
                            android:layout_gravity="center_horizontal"
                            android:background="#303f9f"
                            android:onClick="Formulario_Registrarse_login"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="16sp" />

                    </FrameLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textSize="20sp"
                android:layout_marginTop="30dp"



            />


        </LinearLayout>
    </ScrollView>
</LinearLayout>